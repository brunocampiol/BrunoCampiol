<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bruno Campiol Paes</title>
    <meta name="description" content="Bruno Campiol Paes Home Page">
    <meta name="author" content="Bruno Campiol Paes">
    <meta name="keywords" content="javascript, android, flashlight, server, unity, counter visitors">
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/all.css"
          integrity="sha384-rtJEYb85SiYWgfpCr0jn174XgJTn4rptSOQsMroFBPQSGLdOC5IbubP6lJ35qoM9"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/min/site.min.css" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/min/site.min.js" asp-append-version="true"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Index">
                <img src="~/images/faviconsmall.png" width="30" height="30" alt="logo">
                Bruno
            </a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-page="/Projects/Index">Projects</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Downloads">Downloads</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/About">About</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Posts">Posts</a></li>
                    }
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Identity/Index">
                            @(User.Identity.IsAuthenticated ? @User.Identity.Name : "Sign In ")
                        </a>
                    </li>
                </ul>
                <environment include="Development">
                    <span class="text-warning">Development Mode</span>
                </environment>
            </div>
        </div>
    </nav>
    <div class="container">
        <br />
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>